
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">


<nav class="navbar navbar-toggleable-md navbar-light bg-faded" style="background-color: #e3f2fd;">
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
    <a class="navbar-brand" href="/">
      <img src="http://www.thedesignlove.com/wp-content/uploads/2017/01/037-Seafood-Chef-Logo-Template.jpg" width="30" height="30" alt="">
    </a>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <li class="nav-item active">
      <%= link_to 'Home', "/", class:"nav-link" %>
      </li>

      <li class="nav-item active">
      <%= link_to 'Contact Us', "/contact-us", class:"nav-link" %>
      </li>

    </ul>

    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="text" placeholder="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>

  </div>
</nav>

<div class="container-fluid" style="width: 80%;">

  <h1 class="text-center"> MENU </h1>

  <ul style="text-align:center;" class="nav nav-tabs">

    <% @sections.each do |section| %>
      <div class="nav-item nav-link <%= 'active' if params[:section] == section.name %>" >
        <%= link_to section.name, "/menus?section="+section.name %>
      </div>
    <% end %>

  </ul>

  <table class="table" style="margin-top:10px;">
    <thead>
      <tr>
        <th>#</th>
        <th style="width:20%">Name <i class='glyphicon glyphicon-resize-vertical'></i></th>
        <th>Description</th>
        <th style="width:10%">Price <i class='glyphicon glyphicon-resize-vertical'></i></th>
        <th>Image</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each_with_index do |item, index| %>
      <tr>
        <th><%= index + 1 %></th>
          <td style="width:20%"><%= item.name %></td>
          <td><%= item.description %></td>
          <td style="width:10%"><%= item.price %> </td>
          <td><img src="<%= item.image_url %>" style="with:100px; height: 100px;"></img></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
